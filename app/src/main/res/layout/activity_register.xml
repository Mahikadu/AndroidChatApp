<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.design="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:padding="20dp"
        android:text="Chat APP"
        android:textColor="#58595B"
        android:textSize="20sp"
        android:textStyle="normal"
        android:visibility="visible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        android:layout_above="@+id/bottomlayout"
        android:layout_below="@+id/imageView1"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/login_layout"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Register"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="normal"
            android:visibility="visible"
            />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="10dp"
        android:isScrollContainer="true"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.androidchatapp.Views.RoundedImageView
            android:id="@+id/imageButtonCamera"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/my_account" />


        <android.support.design.widget.TextInputLayout

            android:id="@+id/userlayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android.support.design:hintTextAppearance="@style/TextInputLayout">

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:gravity="start|center_vertical"
                android:hint="UserName"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:maxLines="1"
                android:paddingEnd="10dp"
                android:text=""
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:longClickable="false"
                android:descendantFocusability="beforeDescendants"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:id="@+id/emaillayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android.support.design:hintTextAppearance="@style/TextInputLayout">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:gravity="start|center_vertical"
                android:hint="E-Mail"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:maxLines="1"
                android:paddingEnd="10dp"
                android:text=""
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:longClickable="false"
                android:descendantFocusability="beforeDescendants"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:id="@+id/doblayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android.support.design:hintTextAppearance="@style/TextInputLayout">

            <EditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:gravity="start|center_vertical"
                android:hint="Date Of Birth"
                android:drawableLeft="@drawable/dob"
                android:drawablePadding="10dp"
                android:maxLines="1"
                android:paddingEnd="10dp"
                android:text=""
                android:focusable="false"
                android:clickable="false"
                android:windowSoftInputMode="stateHidden"
                android:inputType="none"
                android:textIsSelectable="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:id="@+id/passlayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android.support.design:hintTextAppearance="@style/TextInputLayout">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:gravity="start|center_vertical"
                android:hint="Enter Password"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="10dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingEnd="10dp"
                android:text=""
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:longClickable="false"
                android:descendantFocusability="beforeDescendants"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:id="@+id/comfirmpasslayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android.support.design:hintTextAppearance="@style/TextInputLayout">

            <EditText
                android:id="@+id/comfirmpassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:longClickable="false"
                android:descendantFocusability="beforeDescendants"
                android:gravity="start|center_vertical"
                android:hint="Comfirm Password"
                android:drawableLeft="@drawable/re_pass"
                android:drawablePadding="10dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingEnd="10dp"
                android:text=""
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/txtcountryname"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:drawableLeft="@drawable/place"
            android:padding="12dp"
            android:drawablePadding="10dp"
            android:layout_centerHorizontal="true"
            android:hint="Select Country"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1">

            <EditText
                android:id="@+id/editCountryCode"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.4"
                android:drawablePadding="10dp"
                android:enabled="false"
                android:textSize="15sp"
                android:hint="Countrycode"
                android:inputType="number"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editContactNo"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.6"
                android:drawablePadding="10dp"
                android:hint="Mobile Number"
                android:inputType="number"
                android:textSize="15sp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:longClickable="false"
                android:descendantFocusability="beforeDescendants"
                android:maxLength="10"
                android:padding="10dp" />

        </LinearLayout>

        <Button
            android:id="@+id/registerButton"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/ripple_login"
            android:padding="5dp"
            android:text="Register"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>
    </ScrollView>
<!--

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click here to login"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/login"/>-->

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:gravity="top">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:padding="5dp"
            android:text="Copyright (c) 2017. All right reserved"
            android:textColor="#717171"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--
-->
</RelativeLayout>